#!/bin/bash
INPUT=$1
aider --no-auto-commits --no-gitignore --model gemini/gemini-2.5-flash -m "/ask could you generate report based on this transcript in markdown syntax? in 6 sections: (A) Overview and Chapters (B) Mindmap (in markmap.js syntax) (C) Detailed summary based on different attendees (D) Action Items (E) 50 single select Quiz questions (F) FAQ. capture as much detail as possible. use bullet points. use markdown checkbox syntax for action items. Thanks." --chat-history-file ${INPUT%.json}.md $INPUT
