#!/bin/bash
SOURCE_FILE=$1
jq  -c '.entries[] | {startOffset, speakerDisplayName, text}' ${SOURCE_FILE} | sed 's#speakerDisplayName#Name#' | sed 's#"startOffset"#"Time"#' > ${SOURCE_FILE//.json}.reduced.json
#jq -c '.entries[] | {speakerDisplayName, text             }' ${SOURCE_FILE} | sed 's#speakerDisplayName#Name#' > ${SOURCE_FILE//.json}.reduced.json
echo "reduced $1 to ${SOURCE_FILE//.json}.reduced.json"
